extends layout

block content
    h1= title
    form#formAddMessage(name="addmessage",method="post",action="/submit_success")
        input#inputFirstName(type="text", placeholder="First Name", name="first_name")
        input#inputLastName(type="text", placeholder="Last Name", name="last_name")
        input#inputEmail(type="email", placeholder="Email", name="email")
        input#inputMessage(type="textarea", placeholder="Your Message", name="message")
        button#btnSubmit(type="submit") Submit
